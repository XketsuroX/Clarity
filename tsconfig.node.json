{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/backend/**/*",
    "jest.config.ts",
    "jest.setup.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node",
      "jest",
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2020"
  }
}